  </div>
  <%= link_to "New Bookmark", new_list_bookmark_path(@list), class:"btn btn-success" %>
<div class="container mt-3">
  <div class="row">
    <div class="d-flex justify-content-center">
        <div class="d-inline-flex p-2">
          <div class="movie-card mb-3 mt-3">
          <% @list.bookmarks.each do |bookmark| %>
          <img class="movie-card-image" src="<%= bookmark.movie.poster_url %>" alt="affiche">
          <div class="movie-card-content">
          <div class="movie-card-title">
          <h2 class="card-trip-pricing"><%= bookmark.movie.title %> - </h2>
          <h2 class="card-trip-pricing"><%= bookmark.movie.rating %> </h2>
          </div>
          <%= bookmark.movie.overview %><br>
          <%= bookmark.comment %><br>
            <%= link_to "Delete",
        bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
          </div>
        <% end %>
      </ul>
      </div>
      </div>
  </div>
